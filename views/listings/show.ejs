<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-3 mt-3">
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-5 offset-3 ">
        <img src="<%= listing.image.url %>" class="card-img-top show-img col-4" alt="Listing Image">

    <div class="card-body ">
       <p class="card-text">
            <%= listing.description %> <br>
            &#x20b9; <%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
        </p>
    </div>
    <br>

    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" 
            class="btn btn-dark offset-4 edit-btn"
            >Edit</a>

        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
            <button type="submit" class="btn btn-dark offset-6">Delete</button>
        </form>  
    </div>
</div>

<div class="col-8 offset-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">  
        <div class="mt-3 mb-3">
            <label for="" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]"class="form-range" >
        </div>
        <div>
            <label for="" class="form-label">Comment</label>
            <textarea 
            name="review[Comment]" 
            id="Comment" 
            cols="30" 
            rows="5" 
            class="form-control" 
            required
            ></textarea>
            <div class="invalid-feedback">Please Add Some Comments for Review</div>
        </div>
        <Button class="btn btn-outline-dark mt-3" >Submit</Button>
    </form>
</div>
</div>